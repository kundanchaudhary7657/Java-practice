class Solution {
    public double myPow(double x, int n) {
        double ans= 1.0;
        long l= n;
        if(l<0){
            l=-l;
        }
        while(l>0){
            if(l%2==1){
                ans=ans*x;
             l=   l-1;
            }
            else{
                x=x*x;
                l=l/2;
            }
        }
          if (n < 0) ans = 1.0 / ans; // invert if original n was negative
    return ans;

        
    }
}
